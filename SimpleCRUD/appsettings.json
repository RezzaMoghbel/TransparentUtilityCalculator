{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "SupportPermissions": {
    "User": {
      "Tickets": { "Read": true, "Create": true, "Update": false, "Delete": false },
      "Announcements": { "Read": true, "Create": false, "Update": false, "Delete": false }
    },
    "Admin": {
      "Tickets": { "Read": true, "Create": true, "Update": true, "Delete": true },
      "Announcements": { "Read": true, "Create": true, "Update": true, "Delete": true }
    },
    "SuperAdmin": {
      "Tickets": { "Read": true, "Create": true, "Update": true, "Delete": true },
      "Announcements": { "Read": true, "Create": true, "Update": true, "Delete": true }
    },
    "System": {
      "Tickets": { "Read": true, "Create": true, "Update": true, "Delete": true },
      "Announcements": { "Read": true, "Create": true, "Update": true, "Delete": true }
    }
  },
  "AllowedHosts": "*"
}
