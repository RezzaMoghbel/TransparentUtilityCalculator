@using SimpleCRUD.Services
<BaseActionButton IconClass="bi-envelope"
                  ButtonClass="btn-outline-primary"
                  Title="Reset Password"
                  OnClick="SendResetEmail"
                  ExtraStyleClass="@ExtraStyleClass" />

@code {
    [Parameter] public string Username { get; set; } = string.Empty;
    [Parameter] public string ExtraStyleClass { get; set; } = string.Empty;
    [Inject] private HttpClient Http { get; set; } = default!;
    [Inject] private ToastService ToastService { get; set; } = default!;

    private void SendResetEmail()
    {
        if (string.IsNullOrWhiteSpace(Username))
        {
            ToastService.ShowError("Username is required.");
            return;
        }

        ToastService.ShowSuccess("Reset link sent successfully.");
    }
}
