<BaseActionButton IconClass="bi-trash"
                  ButtonClass="btn-outline-danger"
                  ModalTitle="Confirm Delete"
                  ModalBody="Are you sure you want to delete this item?"
                  ConfirmButtonText="Delete"
                  ConfirmButtonClass="btn-danger"
                  ModalHeaderClass="text-danger"
                  RequiresConfirmation="true"
                  OnClick="@OnDelete"
                  ExtraStyleClass="@ExtraStyleClass"
                  Disabled="@Disabled" 
                  DisplayTitle="DisplayTitle"
                  Title="Delete"/>

@code {
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public string ExtraStyleClass { get; set; } = string.Empty;
    [Parameter] public bool DisplayTitle { get; set; }
    [Parameter] public bool Disabled { get; set; }
}