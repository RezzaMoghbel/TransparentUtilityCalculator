@page "/support/announcements"
@attribute [Authorize]
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Identity
@using SimpleCRUD.Data.Models
@using Microsoft.EntityFrameworkCore
@using SimpleCRUD.Components.Reuseables.Toasts
@inject AuthenticationStateProvider AuthProvider
@inject SupportAnnouncementHandler AnnouncementHandler
@inject SupportLookupHandler LookupHandler
@inject SupportPermissionService PermissionService
@inject ToastService ToastService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavManager
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory

<Toast />

<AccessLevelView>
    <PageTitle>Announcements</PageTitle>

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="mb-0">Building Announcements</h1>
    </div>

    @if (!canReadAnnouncements)
    {
        <div class="alert alert-warning">
            Your account does not have permission to read announcements.
        </div>
    }
    else if (isLoading)
    {
        <p>Loading announcements...</p>
    }
    else if (!string.IsNullOrEmpty(loadError))
    {
        <div class="alert alert-danger">@loadError</div>
    }
    else
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted">Category</label>
                        <select class="form-select form-select-sm" @onchange="OnCategoryChanged" value="@selectedCategoryCode">
                            <option value="">All categories</option>
                            @foreach (var category in categories)
                            {
                                <option value="@category.Code">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-12 col-md-3 d-flex align-items-end">
                        <button class="btn btn-outline-secondary btn-sm w-100" @onclick="ApplyFilters">Apply</button>
                    </div>
                </div>
            </div>
        </div>

        @if (!announcements.Any())
        {
            <p>No announcements available.</p>
        }
        else
        {
            <div class="row g-3">
                @foreach (var announcement in announcements)
                {
                    <div class="col-12">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                                    <div>
                                        <h2 class="h5 mb-1">@announcement.Title</h2>
                                        <div class="text-muted small">@announcement.PublishedAt?.ToLocalTime():g</div>
                                    </div>
                                    <span class="badge bg-secondary">@GetCategoryName(announcement.CategoryId)</span>
                                </div>
                                <p class="mt-3 mb-0" style="white-space:pre-wrap;">@Truncate(announcement.Body, 280)</p>
                            </div>
                            <div class="card-footer text-end">
                                <ViewButton Route="@($"/support/announcements/{announcement.Id}")" ExtraStyleClass="btn-sm" DisplayTitle="true" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex flex-wrap align-items-center gap-3 my-3">
                <div>
                    <label class="form-label me-2">Page size</label>
                    <select class="form-select form-select-sm d-inline-block" style="width:auto"
                            @onchange="OnPageSizeChanged" value="@pageSize">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                    </select>
                </div>
                <Pagination TotalItems="@totalCount"
                            PageSize="@pageSize"
                            CurrentPage="@currentPage"
                            CurrentPageChanged="OnPageChanged"
                            MaxVisiblePages="7" />
            </div>
        }
    }
</AccessLevelView>

@code {
    private readonly List<SupportAnnouncement> announcements = new();
    private readonly List<IssueCategory> categories = new();

    private bool isLoading = true;
    private bool canReadAnnouncements;
    private string? loadError;
    private int? buildingId;
    private int currentPage = 1;
    private int pageSize = 5;
    private int totalCount;
    private string? selectedCategoryCode;
    private bool isAdmin;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        
        // Check if user is Admin - use IDbContextFactory to avoid concurrency issues
        var currentUserId = UserManager.GetUserId(authState.User);
        if (!string.IsNullOrEmpty(currentUserId))
        {
            await using var dbContext = await DbContextFactory.CreateDbContextAsync();
            var accessLevelId = await dbContext.Users
                .Where(u => u.Id == currentUserId)
                .Select(u => u.AccessLevelId)
                .FirstOrDefaultAsync();
            isAdmin = accessLevelId >= 2;
        }
        else
        {
            isAdmin = false;
        }

        // Redirect Admins to the admin announcements page
        if (isAdmin)
        {
            ToastService.ShowWarning("Admins should use the Admin Announcements page. Redirecting...");
            NavManager.NavigateTo("/support/admin/announcements");
            return;
        }

        var user = await UserManager.GetUserAsync(authState.User);
        buildingId = user?.BuildingId;

        var permissions = await PermissionService.GetPermissionsAsync(authState.User);
        canReadAnnouncements = permissions.Announcements.Read;

        await LoadLookupsAsync();
        await LoadAnnouncementsAsync();
    }

    private async Task LoadLookupsAsync()
    {
        var result = await LookupHandler.GetIssueCategoriesAsync();
        if (result.IsSuccess && result.Data is not null)
        {
            categories.Clear();
            categories.AddRange(result.Data);
        }
    }

    private async Task LoadAnnouncementsAsync()
    {
        if (!canReadAnnouncements)
        {
            return;
        }

        if (buildingId is null)
        {
            loadError = "No building is associated with your account.";
            isLoading = false;
            return;
        }

        isLoading = true;
        loadError = null;

        var request = new AnnouncementListRequest
        {
            BuildingId = buildingId,
            CategoryCode = string.IsNullOrWhiteSpace(selectedCategoryCode) ? null : selectedCategoryCode,
            IsActive = true,
            IncludeArchived = false,
            PageNumber = currentPage,
            PageSize = pageSize
        };

        var result = await AnnouncementHandler.GetAnnouncementsAsync(request);
        isLoading = false;

        if (!result.IsSuccess || result.Data is null)
        {
            loadError = result.ErrorMessage ?? "Failed to load announcements.";
            ToastService.ShowError(loadError);
            return;
        }

        announcements.Clear();
        announcements.AddRange(result.Data);
        totalCount = announcements.FirstOrDefault()?.TotalCount ?? announcements.Count;
        StateHasChanged();
    }

    private async Task OnPageChanged(int newPage)
    {
        currentPage = newPage;
        await LoadAnnouncementsAsync();
    }

    private async Task OnPageSizeChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var newSize) && newSize > 0)
        {
            pageSize = newSize;
            currentPage = 1;
            await LoadAnnouncementsAsync();
        }
    }

    private Task OnCategoryChanged(ChangeEventArgs e)
    {
        selectedCategoryCode = e.Value?.ToString();
        return Task.CompletedTask;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadAnnouncementsAsync();
    }

    private string GetCategoryName(int? categoryId)
        => categories.FirstOrDefault(c => c.Id == categoryId)?.Name ?? "General";

    private static string Truncate(string value, int maxChars)
    {
        if (string.IsNullOrEmpty(value) || value.Length <= maxChars)
        {
            return value;
        }

        return value[..maxChars] + "...";
    }
}

